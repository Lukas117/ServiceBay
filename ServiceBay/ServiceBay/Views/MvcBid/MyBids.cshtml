@model IEnumerable<ServiceBay.Models.Bid>

@{
    ViewData["Title"] = "My bids";
}

<h1>My bids</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auction)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuctionId)
            </td>
            <td>
                <a asp-controller="MvcAuction" asp-action="Details" asp-route-id="@item.AuctionId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
